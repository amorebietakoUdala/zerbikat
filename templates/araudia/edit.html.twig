{% extends 'base.html.twig' %}

{% block menuTitle %}
    <a class="navbar-brand">{{ 'messages.araudiak' | trans }}</a>
{% endblock menuTitle %}

{% block menuOptions %}
    <ul class="nav navbar-nav">
        <li><a href="#" onclick="document.forms['{{ edit_form.vars.name }}'].submit()" class="fa fa-floppy-o"> {{ 'messages.gorde'| trans }}</a></li>
        <li><a href="{{ path('araudia_index') }}" class="fa fa-undo"> {{ 'messages.zerrendara'| trans }}</a></li>
    </ul>
{% endblock menuOptions %}

{% block body %}
    <div class="container" role="main">
        {{ form_start(edit_form) }}
            {#{{ form_widget(edit_form) }}#}
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.kodea'| trans }}</b>
                    {#{{ form_label(edit_form.kodea, 'Kodea: ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(edit_form.kodea) }}
                    {{ form_widget(edit_form.kodea, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.araumota'| trans }}</b>
                    {#{{ form_label(edit_form.araumota, 'Arau-mota: ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(edit_form.araumota) }}
                    {{ form_widget(edit_form.araumota, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.araua'| trans }} ({{ 'messages.eu'| trans }})</b>
                    {#{{ form_label(edit_form.arauaeu, 'Araua (eu): ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(edit_form.arauaeu) }}
                    {{ form_widget(edit_form.arauaeu, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.araua'| trans }} ({{ 'messages.es'| trans }})</b>
                    {#{{ form_label(edit_form.arauaes, 'Araua (es): ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(edit_form.arauaes) }}
                    {{ form_widget(edit_form.arauaes, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.esteka'| trans }} ({{ 'messages.eu'| trans }})</b>
                    {#{{ form_label(edit_form.estekaeu, 'Esteka (eu): ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(edit_form.estekaeu) }}
                    {{ form_widget(edit_form.estekaeu, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.esteka'| trans }} ({{ 'messages.es'| trans }})</b>
                    {#{{ form_label(edit_form.estekaes, 'Esteka (es): ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(edit_form.estekaes) }}
                    {{ form_widget(edit_form.estekaes, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="row">
        {% else %}
        <div class="row hidden">
        {% endif %}
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.udala'| trans }}</b>
                    {#{{ form_label(edit_form.udala, 'Udala: ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(edit_form.udala) }}
                    {{ form_widget(edit_form.udala, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        {{ form_end(edit_form) }}
    </div>
{% endblock body %}
