{% extends 'base.html.twig' %}

{% block menuTitle %}
    <a class="navbar-brand">{{ 'messages.arruntak' | trans }}</a>
{% endblock menuTitle %}

{% block menuOptions %}
    <ul class="nav navbar-nav">
        <li><a href="#" onclick="document.forms['{{ form.vars.name }}'].submit()" class="fa fa-floppy-o"> {{ 'messages.gorde'| trans }}</a></li>
        <li><a href="{{ path('arrunta_index') }}" class="fa fa-undo"> {{ 'messages.utzi'| trans }}</a></li>
    </ul>
{% endblock menuOptions %}

{% block body %}
    <div class="container" role="main">
        {{ form_start(form) }}
            {#{{ form_widget(form) }}#}
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.epea'| trans }} ({{ 'messages.eu'| trans }})</b>
                    {#{{ form_label(form.epeaeu, 'Epea (eu): ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(form.epeaeu) }}
                    {{ form_widget(form.epeaeu, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.epea'| trans }} ({{ 'messages.es'| trans }})</b>
                    {#{{ form_label(form.epeaes, 'Epea (es): ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(form.epeaes) }}
                    {{ form_widget(form.epeaes, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="row">
        {% else %}
        <div class="row hidden">
        {% endif %}
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.udala'| trans }}</b>
                    {#{{ form_label(form.udala, 'Udala: ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(form.udala) }}
                    {{ form_widget(form.udala, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
