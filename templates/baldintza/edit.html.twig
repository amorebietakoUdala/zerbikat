{% extends 'base.html.twig' %}

{% block menuTitle %}
    <a class="navbar-brand">{{ 'messages.baldintzak' | trans }}</a>
{% endblock menuTitle %}

{% block menuOptions %}
    <ul class="nav navbar-nav">
        <li><a href="#" onclick="document.forms['{{ edit_form.vars.name }}'].submit()" class="fa fa-floppy-o"> {{ 'messages.gorde'| trans }}</a></li>
        <li><a href="{{ path('baldintza_index') }}" class="fa fa-undo"> {{ 'messages.zerrendara'| trans }}</a></li>
    </ul>
{% endblock menuOptions %}

{% block body %}
    <div class="container" role="main">
        {{ form_start(edit_form) }}
            {#{{ form_widget(edit_form) }}#}

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.baldintza'| trans }} ({{ 'messages.eu'| trans }})</b>
                    {#{{ form_label(edit_form.baldintzaeu, 'Baldintza (eu): ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(edit_form.baldintzaeu) }}
                    {{ form_widget(edit_form.baldintzaeu, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.baldintza'| trans }} ({{ 'messages.es'| trans }})</b>
                    {#{{ form_label(edit_form.baldintzaes, 'Baldintza (es): ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(edit_form.baldintzaes) }}
                    {{ form_widget(edit_form.baldintzaes, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="row">
        {% else %}
        <div class="row hidden">
        {% endif %}
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.udala'| trans }}</b>
                    {#{{ form_label(edit_form.udala, 'Udala: ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(edit_form.udala) }}
                    {{ form_widget(edit_form.udala, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        {{ form_end(edit_form) }}
    </div>
{% endblock body %}
