{% extends "@User/layout.html.twig" %}

{% trans_default_domain 'user_bundle' %}

{% block user_content %}

    {% if error is defined and error is not null %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="form-signin" action="{{ path("user_security_login_check") }}" method="post">

        <h2 class="form-signin-heading">{{ 'security.login.title' | trans }}</h2>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="form-group">
            <label class="sr-only" for="username">{{ 'user.username'|trans }}</label>
            <input class="form-control" type="text" id="username" name="username" value="{{ last_username }}" required="required" />
        </div>

        <div class="form-group">
            <label class="sr-only" for="password">{{ 'user.password'|trans }}</label>
            <input class="form-control" type="password" id="password" name="password" required="required" />
        </div>

        <div class="checkbox">
            <label for="remember_me">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me' |trans }}
            </label>
        </div>

        <input type="submit"
               class="btn btn-lg btn-primary btn-block"
               id="_submit"
               name="_submit"
               value="{{ 'btn.security.login.submit'| trans }}" />
    </form>
{% endblock user_content %}