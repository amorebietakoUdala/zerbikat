{% trans_default_domain 'user_bundle' %}

{% block body %}
<div class="container">
    {% block content %}
        {% if is_granted('ROLE_USER') %}
            <div class="collapse navbar-collapse" id="navbar-collapse-1">
                <ul class="nav navbar-nav">
                    {% block nav %}
                    {% endblock %}
                </ul>
            {% block navright %}{% endblock %}
            </div><!-- /.navbar-collapse -->
        {% endif %}

        {% block authenticated %}
            <div>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    {{ 'layout.logged_in_as'| trans({'%username%': app.user.username}) }} |
                    <a href="{{ path('user_security_logout') }}">
                        {{ 'layout.logout'| trans }}
                    </a>
                {% else %}
                    <a href="{{ path('user_security_login_check') }}">{{ 'layout.login'|trans({}) }}</a>
                {% endif %}
            </div>
        {% endblock authenticated %}

        {% block message %}
            {{ include('@User/_messages.html.twig') }}
        {% endblock message %}

        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <div>
            {% block user_content %}{% endblock %}
        </div>

    {% endblock %}
</div>
{% endblock body %}

{% block stylesheets %}
	{{ encore_entry_link_tags('login') }}
{% endblock %}


{% block javascripts %}
    {{ encore_entry_script_tags('login') }}
{% endblock %}
