{% extends 'base.html.twig' %}

{% block menuTitle %}
    <a class="navbar-brand">{{ 'messages.eraikinak'| trans }}</a>
{% endblock menuTitle %}

{% block menuOptions %}
    <ul class="nav navbar-nav">
        <li><a href="#" onclick="document.forms['{{ form.vars.name }}'].submit()" class="fa fa-floppy-o"> {{ 'messages.gorde'| trans }}</a></li>
        <li><a href="{{ path('eraikina_index') }}" class="fa fa-undo"> {{ 'messages.utzi'| trans }}</a></li>
    </ul>
{% endblock menuOptions %}

{% block body %}
    <div class="container" role="main">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.barrutia'| trans }}</b>
                    {#{{ form_label(form.barrutia, 'Barrutia: ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(form.barrutia) }}
                    {{ form_widget(form.barrutia, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.izena'| trans }}</b>
                    {#{{ form_label(form.izena, 'Eraikina: ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(form.izena) }}
                    {{ form_widget(form.izena, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.longitudea'| trans }}</b>
                    {#{{ form_label(form.longitudea, 'Longitudea: ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(form.longitudea) }}
                    {{ form_widget(form.longitudea, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.latitudea'| trans }}</b>
                    {#{{ form_label(form.latitudea, 'Latitudea: ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(form.latitudea) }}
                    {{ form_widget(form.latitudea, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="row">
        {% else %}
        <div class="row hidden">
        {% endif %}
            <div class="col-sm-6">
                <div class="form-group">
                    <b>{{ 'messages.udala'| trans }}</b>
                    {#{{ form_label(form.udala, 'Udala: ', { 'label_attr': {'class': 'control-label'} }) }}#}
                    {{ form_errors(form.udala) }}
                    {{ form_widget(form.udala, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>


        {{ form_end(form) }}
    </div>
{% endblock body %}
