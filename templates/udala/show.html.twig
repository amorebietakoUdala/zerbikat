{% extends 'base.html.twig' %}

{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">{{ 'messages.udalak'|trans }}</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    {% if is_granted('ROLE_SUPER_ADMIN') %}<li><a href="{{ path('udala_index') }}" class="fa fa-undo"> {{ 'messages.zerrendara'|trans }}</a></li>{% endif %}
                    {% if is_granted('ROLE_ADMIN') %}<li><a href="{{ path('udala_edit', { 'id': udala.id }) }}" class="fa fa-pencil"> {{ 'messages.aldatu'|trans }}</a></li>{% endif %}
		    {% if is_granted('ROLE_SUPER_ADMIN') %}<li><a href="{{ path('fitxa_guztiak_pdf', { 'id' : udala.id }) }}" class="fa fa-file-pdf-o"> {{ 'messages.esportatu_liburua'|trans }}</a></li>{% endif %}
		    {% if not is_granted('ROLE_SUPER_ADMIN') and is_granted('ROLE_ADMIN') %}<li><a href="{{ path('fitxa_guztiak_pdf') }}" class="fa fa-file-pdf-o"> {{ 'messages.esportatu_liburua'|trans }}</a></li>{% endif %}
		    {% if not is_granted('ROLE_SUPER_ADMIN') and is_granted('ROLE_ADMIN') %}<li><a href="{{ path('doklagun_guztiak_pdf') }}" class="fa fa-file-pdf-o"> {{ 'messages.esportatu_doklaguntzailea'|trans }}</a></li>{% endif %}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}


{% block body %}
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th class="col-md-3 text-center">
                    <img src='{{ udala.logoa }}' />
                </th>
                <th>
                    <h4>{{ udala.izenaeu }} - {{ udala.izendapenaeu }} - {{ udala.ifk }}</h4>
                    <h5>{{ udala.izenaeu }} - {{ udala.izendapenaes }} - {{ udala.ifk }}</h5>
                </th>
            </tr>
        </tbody>
    </table>


{% endblock %}