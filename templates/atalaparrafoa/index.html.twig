{% extends 'base.html.twig' %}

{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Atalaren-parrafoak</a>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
                <div id="navbar" class="navbar-collapse collapse navbar-right">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('atalaparrafoa_new') }}" class="fa fa-plus"> Parrafo berria</a></li>
                    </ul>
                </div>
            {% endif %}
        </div>
    </nav>
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Testuaeu</th>
                <th>Testuaes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for atalaparrafoa in atalaparrafoas %}
            <tr>
                <td>{{ atalaparrafoa.testuaeu|raw }}</td>
                <td>{{ atalaparrafoa.testuaes|raw }}</td>
                <td NOWRAP class="text-right">
                    <ul class="list-inline">
                        {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('atalaparrafoa_edit', { 'id': atalaparrafoa.id }) }}" class="fa fa-pencil"></a></li>
                            <li>{{ form_start(deleteforms[atalaparrafoa.id],{'attr': {'id': atalaparrafoa.id}}) }}
                                <a href="#" onclick="document.getElementById({{ atalaparrafoa.id }}).submit();" ><i class="fa fa-trash text-danger"></i></a>
                                {{ form_end(deleteforms[atalaparrafoa.id]) }}</li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
